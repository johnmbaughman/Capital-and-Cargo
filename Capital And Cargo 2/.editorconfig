[TinyIoC.cs]
generated_code = true

# CA1716: Identifiers should not match keywords
# 20201015 - jbaughma: Unless "Shared" becomes too obscure and obfuscated, we'll ignore this
[Protein.ShopFloor.Shared*/**.cs]
